<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/knitted"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/recipeView"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/recipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="#4B7948"
        android:text="Legg opp X antall masker. Strikk vrangbord i 10 runder.
        Strikk Y runder rett før du starter på mønsteret. Følg mønsteret, mellom hvert mønster strikker du Z masker.
        Etter endt mønster strikker du A runder med rett før du feller av 4 masker pr runde i 7 runder. Fell av.">
    </TextView>
    </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back to Main Menu"
            android:background="@drawable/button"
            android:layout_gravity="center_vertical"
            android:id="@+id/backButton"/>
    </LinearLayout>